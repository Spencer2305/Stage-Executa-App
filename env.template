# ================================
# AWS RDS PostgreSQL Database
# ================================
# Replace with your actual RDS connection string after running setup-aws-database.sh
DATABASE_URL="postgresql://executa_admin:YOUR_PASSWORD@your-rds-endpoint.amazonaws.com:5432/executa_production"

# ================================
# Authentication Secrets
# ================================
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ================================
# OpenAI Configuration
# ================================
OPENAI_API_KEY="sk-your-openai-api-key-here"

# ================================
# AWS Configuration
# ================================
# Your AWS credentials and region
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_ACCOUNT_ID="123456789012"

# ================================
# Stripe Configuration (for billing)
# ================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your-publishable-key"

# ================================
# App Configuration
# ================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-for-development"
NODE_ENV="development"

# ================================
# Email Configuration (optional)
# ================================
# For email verification and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@executa.ai" 